<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rateduspage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

        <ImageView
            android:id="@+id/ratedus_box_rateduspage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fragment_bg_button_mintblue"
            android:elevation="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.85"
            app:tint="#000000" />

        <RatingBar
            android:id="@+id/starbar_rateduspage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:elevation="28dp"
            android:numStars="5"
            android:progressTint="#FFC107"
            android:rating="3"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/review_edittext_rateduspage"
            app:layout_constraintEnd_toEndOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintStart_toStartOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintTop_toBottomOf="@+id/experience_text_rateduspage"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/experience_text_rateduspage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="24dp"
            android:fontFamily="@font/db_helvethaicamon_x"
            android:text="How was you experience?"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintWidth_percent="0.8"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintEnd_toEndOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintStart_toStartOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintTop_toTopOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/review_edittext_rateduspage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fragment_bg_white_stroke_whitetrans"
            android:elevation="32dp"
            android:ems="10"
            android:fontFamily="@font/db_helvethaicamon_x"
            android:gravity="start"
            android:hint="Write your review..."
            android:inputType="textLongMessage"
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/submit_button_rateduspage"
            app:layout_constraintEnd_toEndOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintTop_toTopOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintVertical_bias="0.92"
            app:layout_constraintWidth_percent="0.75" />

        <ImageButton
            android:id="@+id/submit_button_rateduspage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fragment_bg_button_redpurple"
            android:elevation="28dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintEnd_toEndOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/ratedus_box_rateduspage"
            app:layout_constraintTop_toTopOf="@id/ratedus_box_rateduspage"
            app:layout_constraintWidth_percent="0.28" />

        <TextView
            android:id="@+id/submit_text_rateduspage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="28dp"
            android:fontFamily="@font/db_helvethaicamon_x"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintWidth_percent="0.28"
            app:layout_constraintBottom_toBottomOf="@+id/submit_button_rateduspage"
            app:layout_constraintEnd_toEndOf="@+id/submit_button_rateduspage"
            app:layout_constraintStart_toStartOf="@+id/submit_button_rateduspage"
            app:layout_constraintTop_toTopOf="@+id/submit_button_rateduspage"
            app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>