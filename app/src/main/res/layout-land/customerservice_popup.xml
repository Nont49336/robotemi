<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customerservice_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F2FFFFFF"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_customerservice_popup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/fragment_bg_minttrans"
        android:orientation="horizontal"
        card_view:layout_constraintWidth_percent="0.7"
        card_view:layout_constraintHeight_percent="0.7"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_customerservice_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="#ffffff"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:id="@+id/linearlayout_customerservice_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#00ffffff"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/asklist_linearlayout_customerservice_popup"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="70"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <!--android:text="('Event Title')"-->
                    <TextView
                        android:id="@+id/ask_text_customerservice_popup"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25"
                        android:textSize="48sp"
                        android:background="#00ffffff"
                        android:elevation="4dp"
                        android:fontFamily="@font/db_helvethaicamon_x_cond"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Call Customer Service?"
                        android:textColor="#28D0B7"
                        android:textStyle="bold" />

                    <!--android:text="('Start Date' - 'End Date')"-->
                    <TextView
                        android:id="@+id/explain_text_customerservice_popup"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:textSize="18sp"
                        android:background="#00ffffff"
                        android:elevation="4dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="This will start with video call to customer service."
                        android:textColor="#968EA5"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonlist_linearlayout_customerservice_popup"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="30"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="#DFDDE4"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/cancel_button_customerservice_popup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:elevation="28dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/fragment_bg_button_white"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Cancel"
                        android:textColor="#968EA5"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/call_button_customerservice_popup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:elevation="28dp"
                        android:background="@drawable/fragment_bg_button_mint"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Call"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>